<style>
    body {
        background-image: url('/bridge1.jpg?v=0');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Relocation_and_booking_services</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascript.js?v=1.0"></script>
</head>

<body onload="loggedUser()">
    <nav class="navbar navbar-expand-sm bg-dark fixed-top p-0 d-flex justify-content-right">
        <div class="container-fluid">
            <div class="mb-3">
                <a asp-controller="Home" asp-action="Profile">
                    <img src="" id="image" width="30" height="30" />
                </a>
            </div>
            <ul class="navbar-nav d-none" id="userDetails">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Homepage">Homepage</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllBookings">
                        Booking services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllRentings">
                        Renting services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllJobs">
                        Job search services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllFurnitureTransports">
                        Furniture transport services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllTransports">
                        Travel services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AllSchools">
                        School services
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Email" asp-action="Emails">Emails</a>
                </li>
                <li class="nav-item " id="relocation">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Relocation">Relocation</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">Sign out</a>
                </li>
            </ul>

            <ul class="navbar-nav d-none" id="industryDetails">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Homepage">Homepage</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="IndustryUser" asp-action="ServiceList">Your services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Email" asp-action="Emails">Emails</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">Sign out</a>
                </li>
            </ul>
            <ul class="navbar-nav d-none" id="schoolUserDetails">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Homepage">Homepage</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="School" asp-action="SchoolServices">Your school servicess</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Email" asp-action="Emails">Emails</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">Sign out</a>
                </li>
            </ul>

            <ul class="navbar-nav d-none" id="crucialDetails">
                <li class="nav-item" id="loggingOption">
                    <a class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#logInModal">Log in</a>
                </li>
                <li class="nav-item" id="creatingOption">
                    <a class="nav-link text-white" data-bs-toggle="modal" data-bs-target="#createAccountModal">Create Account</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="modal fade" id="logInModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Log in</h5>
                    <form asp-controller="Home" asp-action="LogIn" method="post" class="needs-validated">
                        <div class="mb-3 mt-3">
                            <label for="Name" class="form-label">Name:</label>
                            <input type="text" name="Name" class="form-control" id="Name1" placeholder="Enter Name">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter your name in order to log in</div>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password1" placeholder="Enter password" name="Password">
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">You must enter password in order to log in</div>
                        </div>
                        <hstack>
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a asp-controller="Home" asp-action="GoogleLogin" class="btn btn-outline-dark">Google Login <img src="/GoogleLogo.jpg" width="25" height="25" /></a>
                        </hstack>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createAccountModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">CreateAccount</h5>
                    <form method="post" id="createAccountForm" enctype="multipart/form-data">
                        <div class="mb-3 mt-3" data-section="nonGoogle">
                            <label for="Name" class="form-label">Name:</label>
                            <input type="text" class="form-control" name="Name" id="Name" placeholder="Enter Name">
                        </div>
                        <div class="mb-3" data-section="nonGoogle">
                            <label for="Password" class="form-label">Password:</label>
                            <input type="password" class="form-control" id="Password" name=Password placeholder="Enter password">
                        </div>
                        <div class="mb-3" data-section="nonGoogle">
                            <label for="Email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="Email" name=Email placeholder="Enter Email">
                        </div>
                        <div class="mb-3">
                            <label for="Phone" class="form-label">Phone:</label>
                            <input type="text" class="form-control" id="Phone" name=Phone placeholder="Enter Phone Number" required>
                        </div>
                        <div class="container" required>
                            <div class="form-check mb-3">
                                <input type="radio" class="form-check-input" id="user1" value="1" data-bs-toggle="collapse" name="Option" onchange="employeerButton()" />
                                <label class="form-check-label" for="user1"> User </label>
                            </div>
                            <div class="form-check mb-3">
                                <input type="radio" class="form-check-input" id="employeer1" value="2" name="Option" onchange="employeerButton()" />
                                <label class="form-check-label" for="employeer1"> Industry User </label>
                            </div>
                            <div class="form-check mb-3">
                                <input type="radio" class="form-check-input" id="school1" value="3" name="Option" onchange="checkSection('schoolUserExtra');employeerButton()" />
                                <label class="form-check-label" for="employeer1"> School User </label>
                            </div>
                        </div>
                        <div class="container" required>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="radio1" name="gender" value="1" checked>
                                <label class="form-check-label" for="radio1">Male</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" id="radio2" name="gender" value="2">
                                <label class="form-check-label" for="radio2">Female</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="gender" value="3">
                                <label class="form-check-label">Other</label>
                            </div>
                        </div>
                        <div class="d-none" id="employeerExtra">
                            <label for="Company" class="form-label">Enter Company</label>
                            <input type="text" class="form-control" name="Company" id="Company" placeholder="Company's name" />
                            <div class="valid-feedback">Ok</div>
                            <div class="invalid-feedback">Company name required</div>

                            <label for="serviceType" class="form-label">Choose service type:</label>
                            <input class="form-control" list="services" name="serviceType" id="serviceType">
                            <datalist id="services">
                                <option value="1">Booking</option>
                                <option value="2">Renting</option>
                                <option value="3">Jobs</option>
                                <option value="4">Furniture Transport</option>
                                <option value="5">Travel</option>
                            </datalist>
                        </div>
                        <div class="mb-3 d-none" id="schoolUserExtra">
                            <label for="schoolType" class="form-label">Choose school type:</label>
                            <input class="form-control" list="schools" name="schoolType" id="schoolType">
                            <datalist id="schools">
                                <option value="1">Kindergarten</option>
                                <option value="2">Elementary School</option>
                                <option value="3">Gymnasium</option>
                                <option value="4">HighSchool</option>
                                <option value="5">University</option>
                            </datalist>
                        </div>
                        <div class="mb-3" data-section="nonGoogle">
                            <input type="file" id="imageUpload" accept="image/*" name="photo" onchange="uploadImage('imageUpload','uploaded')" />
                            <img src="/default.jpg" id="uploaded" width="50" height="50" />
                        </div>
                        <input class="input" name="google" value="no" id="withGoogle" hidden />
                        <button type="button" id="normalCreate" class="btn btn-primary" onclick="createNormal()">Create Account</button>
                        <button type="button" data-section="nonGoogle" class="btn btn-outline-dark" onclick="hideNonGoogle()">Try with Google</button>
                        <button type="button" id="createWithGoogleButton" class="btn btn-outline-dark d-none" onclick="createWithGoogle()">Sign up <img src="/GoogleLogo.jpg" width="25" height="25" /></button>
                        <button type="button" id="resetCreate" class="btn btn-outline-warning d-none" onclick="resetMethod()">Reset</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


</body>
</html>