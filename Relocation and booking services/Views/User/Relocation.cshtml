@model ServiceWrapper;

<div class="card w-60 h-70 p-5">
    <form class="row" asp-controller="User" asp-action="PersonalizedOffers" method="post">
        @Html.AntiForgeryToken()
        <div class="card-body">
            <div class="row">
                <label class="card-title col-form-label d-flex justify-content-center">Please complete this form</label>
            </div>
            <div class="row-mb-3">
                <legend class="col-form-label">What are you?</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="student" value="student" name="button" />
                    <label class="form-check-label" for="student">Student</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="adult" value="adult" name="button" />
                    <label class="form-check-label" for="adult">Adult</label>
                </div>

            </div>
            <div class="mb-3 row">
                <input class="form-control" type="text" placeholder="City to move to" id="target" name="target" required />
            </div>
            <fieldset class="row-mb-3">
                <legend class="form-control row-mb-3">Do you want booking services?</legend>
                <div class="form-check">
                    <input class="form-check-input" value="1" type="checkbox" id="booking" name="booking" />
                    <label class="form-check-label" for="booking">Booking</label>
                </div>

                <legend class="form-control row-mb-3">Do you want renting services?</legend>
                <div class="form-check">
                    <input class="form-check-input" value="2" type="checkbox" id="renting" name="renting" />
                    <label class="form-check-label" for="renting">Renting</label>
                </div>

                <legend class="form-control row-mb-3">Do you want to look for jobs using our services?</legend>
                <div class="form-check">
                    <input class="form-check-input" value="3" type="checkbox" id="jobOption" name="jobOption" />
                    <label class="form-check-label" for="jobOption">Job seeking</label>
                </div>

                <legend class="form-control row-mb-3">Do you want furniture transport services?</legend>
                <div class="form-check">
                    <input class="form-check-input" value="4" type="checkbox" id="furniture" name="furniture" />
                    <label class="form-check-label" for="furniture">Furniture</label>
                </div>

                <legend class="form-control row-mb-3">Do you want travel services?</legend>
                <div class="form-check">
                    <input class="form-check-input" value="5" type="checkbox" id="travel" name="travel" />
                    <label class="form-check-label" for="travel">Travel</label>
                </div>
                 <legend class="form-control row-mb-3">Do you want school services?</legend>
                <div class="form-check">
                <input class="form-check-input" value="6" type="checkbox" id="travel" name="travel" />
                <label class="form-check-label" for="travel">Schools</label>
                </div>
            </fieldset>

        </div>
        <div class="card-footer">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>